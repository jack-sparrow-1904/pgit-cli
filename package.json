{
  "name": "pgit-cli",
  "version": "1.1.0",
  "description": "Private file tracking with dual git repositories",
  "main": "dist/index.js",
  "bin": {
    "pgit": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "test:coverage": "jest --coverage",
    "test:ci": "echo \"Skipping tests for CI\" && exit 0",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "changelog": "auto-changelog -p && git add CHANGELOG.md"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "git",
    "private",
    "version-control",
    "cli",
    "typescript",
    "symbolic-links",
    "dual-repository"
  ],
  "author": "Vaishnav Agrawal",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jack-sparrow-1904/pgit-cli.git"
  },
  "bugs": {
    "url": "https://github.com/jack-sparrow-1904/pgit-cli/issues"
  },
  "homepage": "https://github.com/jack-sparrow-1904/pgit-cli#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.0",
    "picomatch": "^4.0.3",
    "simple-git": "^3.19.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "prettier": "^3.0.0",
    "release-it": "^19.0.4",
    "semver": "^7.7.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
